{
	"manifest_version": 2,

	"name": "Wikipedia Context Helper",
	"description": "This extension will analyze a page using GTmetrix",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png"
	},
	
	"background": {
		"scripts": ["background.js"]
	},
	
	"content_scripts": [
		{
			"matches": ["https://en.wikipedia.org/*"],
			"css": ["popup.css"],
			"js": ["popup.js"],
			"run_at": "document_end"
		}
	]
   
}